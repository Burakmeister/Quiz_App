<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="images\invalid.png" />
    <None Remove="images\key-icon.png" />
    <None Remove="images\logo.png" />
    <None Remove="images\logo.svg" />
    <None Remove="images\quiz-logo.svg" />
    <None Remove="images\user-icon.png" />
    <None Remove="Models\Answer.hbm.xml" />
    <None Remove="Models\Question.hbm.xml" />
    <None Remove="Models\Quiz.hbm.xml" />
    <None Remove="Models\User.hbm.xml" />
  </ItemGroup>

  <ItemGroup>
    <Page Remove="images\quizlogo.xaml" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Models\Answer.hbm.xml" />
    <EmbeddedResource Include="Models\Quiz.hbm.xml" />
    <EmbeddedResource Include="Models\Question.hbm.xml" />
    <EmbeddedResource Include="Models\User.hbm.xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MySql.Data" Version="8.0.33" />
    <PackageReference Include="NHibernate" Version="5.4.2" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="images\invalid.png" />
    <Resource Include="images\key-icon.png" />
    <Resource Include="images\logo.png" />
    <Resource Include="images\user-icon.png" />
  </ItemGroup>

</Project>
