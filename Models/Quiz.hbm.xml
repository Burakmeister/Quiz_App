<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Quiz_App"
                   namespace="Quiz_App.Models">

	<class name="Quiz">
		<id name="Id" column="idQuiz">
			<generator class="increment"/>
		</id>
		<property name="Name" column="Name"/>
		<property name="TimeInMin" column="time"/>
		<many-to-one column="User_idUser" name="User" class="User"/>

		<set name ="Questions" table="Question" cascade="all">
			<key column="Quiz_idQuiz"/>
			<one-to-many class="Question"/>
		</set>
		<set name ="Scores" table="Result">
			<key column="Quiz_idQuiz"/>
			<one-to-many class="Result"/>
		</set>
	</class>

</hibernate-mapping>